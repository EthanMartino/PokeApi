@model PokdexEntryViewModel
@{
    ViewData["Title"] = "Pokedex Entry for " + Model.Name;
}

<h2>Pokdex Entry</h2>

<img src="@Model.PokedexImageUrl" alt="Picture of @Model.Name" />

<h3>@Model.Name</h3>
<p>
    Weight: @Model.Weight
    Height: @Model.Height
</p>

<h4>Move List</h4>
<ul>
    @foreach(string move in Model.MoveList)
    {
        <li>@move</li>
    }
</ul>

<button>Prev</button>
<button>Next</button>
